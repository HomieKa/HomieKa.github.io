  <script>
    // JavaScript to handle page navigation
    const allPageBtn = document.getElementById("allPage");
    const latePageBtn = document.getElementById("latePage");
    const nextDayPageBtn = document.getElementById("nextDayPage");

    // Function to show all rows
    function showAllRows() {
      const rows = document.querySelectorAll("#shipmentTable tbody tr");
      rows.forEach(row => {
        row.style.display = "";
      });
      setHighlight(allPageBtn);
    }

    // Function to show only late shipments
    function showLatePage() {
      const rows = document.querySelectorAll("#shipmentTable tbody tr");
      rows.forEach(row => {
        if (row.dataset.status === "late") {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
      setHighlight(latePageBtn);
    }

    // Function to show next day shipments
    function showNextDayPage() {
      const rows = document.querySelectorAll("#shipmentTable tbody tr");
      const nextDay = new Date();
      nextDay.setDate(nextDay.getDate() + 1);
      rows.forEach(row => {
        const eta = new Date(row.cells[4].textContent); // Assuming ETA is in the 5th column
        if (eta.toDateString() === nextDay.toDateString()) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
      setHighlight(nextDayPageBtn);
    }

    // Function to set active button highlight
    function setHighlight(btn) {
      const buttons = document.querySelectorAll('.page-nav button');
      buttons.forEach(button => {
        button.classList.remove('p-highlight');
      });
      btn.classList.add('p-highlight');
    }

    // Event listeners for page buttons
    allPageBtn.addEventListener('click', showAllRows);
    latePageBtn.addEventListener('click', showLatePage);
    nextDayPageBtn.addEventListener('click', showNextDayPage);

    // Default page load
    showAllRows();
  </script>

</body>
